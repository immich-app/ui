{
  "compilerOptions": {
    "declaration": true,
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "strict": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "types": ["vite/client", "node"]
  },
  "include": ["src"],
  "exclude": ["dist", "test", "**/*.spec.*", "vitest.config.js"]
}
